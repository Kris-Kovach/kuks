        +related-products-item
          +related-products-img('/', 'img/new-1.jpg')
          +related-products-content('Strap', '/', 'Ремень для сумки')
            +related-products-price-block('2 499')
        +related-products-item
          +related-products-img('/', 'img/new-2.jpg')
          +related-products-content('Valentine', '/', 'Сумка женская')
            +related-products-price-block('8 499', 'sale', '8 499')
        +related-products-item
          +related-products-img('/', 'img/new-3.jpg')
          +related-products-content('Helen', '/', 'Сумка женская')
            +related-products-price-block('8 499')
        +related-products-item
          +related-products-img('/', 'img/related-products-1.jpg')
          +related-products-content('Love', '/', 'Сумка женская')
            +related-products-price-block('8 499')

    +subscribe('white')
      +btn('Подписаться', 'subscribe', true)(type='submit')

