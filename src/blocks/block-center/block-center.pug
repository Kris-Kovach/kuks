//- Все примеси в этом файле должны начинаться c имени блока (block-center)

mixin block-center(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +block-center('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' block-center--' + modsList[i].trim();
      }
    }

  .block-center(class=allMods)&attributes(attributes)
    block
