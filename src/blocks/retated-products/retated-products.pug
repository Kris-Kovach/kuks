mixin related-products-price-block(price, mods, priceOld)

  //- Принимает:
  //-   price   {string} - цена
  //-   priceOld   {string} - старая цена, если есть
  //-   mods   {string} - список модификаторов
  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' related-products__price-block--' + modsList[i].trim();
      }
    }

  .related-products__price-block(class=allMods)

    if (typeof(priceOld) !== 'undefined' && priceOld)
      span.related-products__price= price
        span.b-rub &nbsp;Ь
      span.related-products__price--old= priceOld
        span.b-rub &nbsp;Ь
    else
      span.related-products__price= price
      span.b-rub &nbsp;Ь
