//- Все примеси в этом файле должны начинаться c имени блока (select-field)

mixin select-field(name, placeholder, mods)

  //- Принимает:
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +select-field('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' select-field-wrap--' + modsList[i].trim();
      }
    }

  .select-field-wrap(class=allMods)&attributes(attributes)
    select.select-field(name=name data-placeholder=placeholder)
      block
