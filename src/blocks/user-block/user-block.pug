//- Все примеси в этом файле должны начинаться c имени блока (user-block)

mixin user-block(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +user-block('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' user-block--' + modsList[i].trim();
      }
    }

  .user-block(class=allMods)&attributes(attributes)
    a.user-block__phone(href="tel:+79095883918") +7 909 588 39 18
    a.user-block__login(href="/")
      svg.user-block__icon(width="10", height="15")
        use(xlink:href="img/sprite-svg.svg#icon-man")
      span Вход

    a.user-block__change-lang(href="/") EN
