//- Все примеси в этом файле должны начинаться c имени блока (main-nav)

mixin main-nav(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +main-nav('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' main-nav--' + modsList[i].trim();
      }
    }

  nav.main-nav(class=allMods)&attributes(attributes)
    ul.main-nav__list
      li.main-nav__item
        a.main-nav__link(href="/") Новинки
      li.main-nav__item
        a.main-nav__link(href="/") Женское
      li.main-nav__item
        a.main-nav__link(href="/") Мужское
      li.main-nav__item
        a.main-nav__link(href="/") DOM
      li.main-nav__item
        a.main-nav__link(href="/") Распродажа
