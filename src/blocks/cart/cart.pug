//- Все примеси в этом файле должны начинаться c имени блока (cart)

mixin cart(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +cart('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' cart--' + modsList[i].trim();
      }
    }

  a.cart(class=allMods href="page-cart.html")
    svg.cart__icon(width="16", height="20")
      use(xlink:href="img/sprite-svg.svg#icon-bag")
    span.cart__number 0
