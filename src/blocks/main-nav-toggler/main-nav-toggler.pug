//- Все примеси в этом файле должны начинаться c имени блока (main-nav-toggler)

mixin main-nav-toggler(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +main-nav-toggler('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' main-nav-toggler--' + modsList[i].trim();
      }
    }

  button.main-nav-toggler.btn(class=allMods)&attributes(attributes)
    span
