mixin new-price-block(price, mods, priceOld)

  //- Принимает:
  //-   price   {string} - цена
  //-   priceOld   {string} - старая цена, если есть
  //-   mods   {string} - список модификаторов
  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' new__price-block--' + modsList[i].trim();
      }
    }

  .new__price-block(class=allMods)

    if (typeof(priceOld) !== 'undefined' && priceOld)
      span.new__price= price
        span.b-rub &nbsp;Ь
      span.new__price--old= priceOld
        span.b-rub &nbsp;Ь
    else
      span.new__price= price
        span.b-rub &nbsp;Ь
